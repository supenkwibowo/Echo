<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/recording_setting_category">

        <ListPreference
            app:defaultValue="@integer/default_sample_rate"
            app:entries="@array/sample_rate_labels"
            app:entryValues="@array/sample_rate_values"
            app:key="sample_rate"
            app:title="@string/sample_rate_setting"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="@string/default_recording_channel"
            app:entries="@array/recording_channel"
            app:entryValues="@array/recording_channel"
            app:key="recording_channel"
            app:title="@string/recording_channel_setting"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
